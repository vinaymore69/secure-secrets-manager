NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/secrets_db

# Crypto Service
CRYPTO_SERVICE_URL=http://localhost:8000
CRYPTO_SERVICE_API_KEY=dev_secret_key_change_in_prod

# KMS (Development - Mock)
KMS_PROVIDER=mock
KMS_KEY_ID=dev-master-key

# JWT/Session
JWT_SECRET=your_jwt_secret_change_in_production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
SESSION_COOKIE_NAME=sid

# Security
CORS_ORIGINS=http://localhost:3001
BCRYPT_ROUNDS=12

# Redis (Optional - for sessions)
REDIS_URL=redis://localhost:6379